{
  "name": "ark",
  "version": "1.0.23",
  "type": "module",
  "description": "Game Tracker & Recommendations Electron App",
  "author": "Pourab Karchaudhuri, Sanket Aley",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "clean": "rm -rf dist dist-electron",
    "dev": "vite",
    "build": "npm run clean && tsc -p tsconfig.node.json && cp electron/preload.cjs dist-electron/electron/preload.cjs && vite build && electron-builder",
    "build:app": "npm run clean && tsc && tsc -p tsconfig.node.json && cp electron/preload.cjs dist-electron/electron/preload.cjs && vite build",
    "preview": "vite preview",
    "electron:compile": "tsc -p tsconfig.node.json && cp electron/preload.cjs dist-electron/electron/preload.cjs",
    "electron:dev": "npm run electron:compile && concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "electron:build": "vite build && electron-builder",
    "test": "vitest --no-isolate",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:electron": "npm run build:app && playwright test --config=playwright.electron.config.ts",
    "test:electron:headed": "npm run build:app && playwright test --config=playwright.electron.config.ts --headed",
    "test:electron:debug": "npm run build:app && playwright test --config=playwright.electron.config.ts --debug",
    "test:all": "npm run test -- --run && npm run test:e2e && npm run test:electron",
    "release": "npm run build:app && electron-builder --publish always",
    "release:draft": "npm run build:app && electron-builder --publish onTagOrDraft",
    "release:local": "npm run build:app && electron-builder --publish never"
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.34.0",
    "@emoji-mart/data": "^1.2.1",
    "@emoji-mart/react": "^1.1.1",
    "@ghostery/adblocker-electron": "^2.13.4",
    "@langchain/core": "^1.1.8",
    "@langchain/google-genai": "^2.1.3",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cross-fetch": "^4.1.0",
    "duck-duck-scrape": "^2.2.7",
    "electron-updater": "^6.1.7",
    "framer-motion": "^10.18.0",
    "langchain": "^1.2.3",
    "lucide-react": "^0.303.0",
    "ogl": "^1.0.11",
    "postprocessing": "^6.38.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^2.2.0",
    "three": "^0.160.0",
    "uuid": "^9.0.1",
    "wouter": "^3.9.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/three": "^0.160.0",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^33.4.11",
    "electron-builder": "^26.4.0",
    "happy-dom": "^12.10.3",
    "jsdom": "^23.0.1",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.32",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.ark.app",
    "productName": "Ark",
    "icon": "build/icon",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "asarUnpack": [
      "**/preload.cjs",
      "**/build/icon.png",
      "**/build/icon.ico"
    ],
    "publish": {
      "provider": "github",
      "owner": "pourabkarchaudhuri",
      "repo": "ark",
      "releaseType": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Ark",
      "uninstallDisplayName": "Ark"
    },
    "mac": {
      "target": "dmg",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "${productName}-${version}.${ext}"
    }
  }
}
